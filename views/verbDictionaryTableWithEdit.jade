div(id="verbEditTable" class="table table-sm")
  div#searchwell&attributes({'class': 'searchwell row'})
    div#totalPages1&attributes({'class':"col-md-2"})
      p!= '<strong>Total Pages:</strong>' 
    div#totalPages2&attributes({'class':"col-md-1"})
      p #{totalPages}
  table 
    thead
      tr
        th SentenceId(click)
        th Word
        th VerbCode
        th Who Added
        th Tool
    tbody
      each verb in allFlaggedVerbs
        tr
          td <button class="linkButtonVerb">#{verb.sentenceId}</button>
          td #{verb.word}
          td 
             input(type="text", name="verbcodename",value="#{verb.verbcode}" class="verbcode jadeinput" readonly)
          td #{verb.userName}
          td <button class="editVerbButton">Edit</button>
          td(class="hidden verbDictionaryClass") #{verb._id}